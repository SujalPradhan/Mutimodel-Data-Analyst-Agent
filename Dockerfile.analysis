# Docker image for executing data analysis code
# This image includes all the required Python packages for data analysis

FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies required for data science packages, DuckDB, and image processing
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    gfortran \
    libopenblas-dev \
    liblapack-dev \
    libfreetype6-dev \
    libpng-dev \
    libjpeg-dev \
    pkg-config \
    sqlite3 \
    libsqlite3-dev \
    curl \
    unzip \
    ca-certificates \
    libssl-dev \
    libcurl4-openssl-dev \
    tesseract-ocr \
    tesseract-ocr-eng \
    && rm -rf /var/lib/apt/lists/*

# Create working directory
WORKDIR /workspace

# Copy requirements and install Python packages
COPY analysis-requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r analysis-requirements.txt

# Create non-root user for security
RUN useradd -m -u 1000 analysis \
    && chown -R analysis:analysis /workspace

USER analysis

# Pre-install DuckDB extensions for the analysis user
RUN python -c "import duckdb; conn = duckdb.connect(); conn.execute('INSTALL httpfs'); conn.execute('INSTALL parquet'); conn.execute('INSTALL json'); conn.execute('INSTALL fts'); conn.close()" || echo "Extension installation will be handled at runtime"

# Default command
CMD ["python"]
